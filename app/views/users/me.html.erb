<% if @me %>
<p>name: <%= @me.name %></p>
<p>email: <%= @me.email %></p>
<p>team: <%= @me.team %></p>
<p>irc: <%= @me.nickname %></p>
<div>
	<form action="<%= me_path %>" method="post">
		New IRC Name: <input type="text" name="nickname">
		New Team: <input type="text" name="team">
		<input type="submit">
	</form>
</div>
<h2>My previous sessions:</h2>
<table>
	<% @me.talks.each do |talk| %>
	<tr>
		<td><%= talk.date %></td>
		<td><%= talk.topic %></td>
	</tr>
	<% end %>
</table>
<% else %>
<p>You need to sign-in to view this page.</p>
<% end %>
