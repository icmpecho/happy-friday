<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Tech Talk's Skip</div>
    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Reason</th>
                <th>Reporter</th>
            </tr>
        </thead>
        <tbody>
        	<% @days.each do |day| %>
            <tr>
                <td><%= day.date %></td>
                <td><%= day.reason %></td>
                <td><%= day.reporter.name %></td>
            </tr>   
            <% end %>     
        </tbody>
    </table>
</div>
